<% layout("/layouts/boilerplate") %>
<body>
    <br><br>
  <h3>Room Deatails</h3>
  <div class="row mt-3">
    <div class="col-8 offset-2">
  <form method="POST" action="/listings" novalidate class="needs-validation">
  
    <div class="mb-3">
      <label for="tittle" class="form-label">Room Name</label>
      <input
        name="listing[title]"
        placeholder="Enter Room name"
        type="text"
        class="form-control"
        required
      />
      <div class="valid-feedback">Name looks good!</div>
      <div class="invalid-feedback">Please Enter a valid name</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control"  required></textarea>
      <div class="invalid-feedback">Please Enter a valid Description</div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image Link</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Rent/month</label>
            <input
              name="listing[price]"
              placeholder="enter price"
          
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter a valid price</div>
          </div>
      
          <div class="mb-3 col-md-8">
            <label for="category" class="form-label">Location/Address </label>
            <input
              name="listing[category]"
              placeholder="Enter the room's address"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter Loaction</div>
          </div>
    </div>
   

    <div class="mb-3">
      <label for="flavor" class="form-label">Mobile Number</label>
      <input
        name="listing[flavor]"
        placeholder="Enter Mobile number"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please Enter Your Mobile Number</div>
    </div>
    
    <button class="btn btn-dark mt-3 mb-4">Add</button>
  </form>
</div>
</div>
<script src="/js/script.js"></script>